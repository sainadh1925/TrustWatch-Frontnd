<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background_security"
    android:padding="24dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="32dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_check_circle"
                app:tint="@color/white"
                android:background="@drawable/bg_circle_gradient"
                android:padding="20dp"
                android:layout_marginBottom="24dp"/>
                <!-- bg_circle_gradient needs to be created, or reuse existing resource if suitable -->

            <TextView
                android:text="Email Verification"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvDescription"
                android:text="Enter the 6-digit code sent to \nyour email"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- OTP Inputs Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <EditText android:id="@+id/otp1" style="@style/OtpBox" android:layout_marginEnd="8dp"/>
                <EditText android:id="@+id/otp2" style="@style/OtpBox" android:layout_marginEnd="8dp"/>
                <EditText android:id="@+id/otp3" style="@style/OtpBox" android:layout_marginEnd="8dp"/>
                <EditText android:id="@+id/otp4" style="@style/OtpBox" android:layout_marginEnd="8dp"/>
                <EditText android:id="@+id/otp5" style="@style/OtpBox" android:layout_marginEnd="8dp"/>
                <EditText android:id="@+id/otp6" style="@style/OtpBox"/>
                
            </LinearLayout>

            <TextView
                android:text="Resend code in 55s"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnVerify"
                android:text="Verify &amp; Continue"
                android:textAllCaps="false"
                android:background="@drawable/bg_button_blue"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:drawableEnd="@drawable/ic_trend_up" 
                android:drawableTint="@color/white"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:id="@+id/tvChangeEmail"
                android:text="Change email address"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
