<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".ProfileActivity">

    <!-- Header / Title -->
    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:text="Profile"
        android:textColor="@color/text_primary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Edit Profile Button (Top Right) -->
    <ImageView
        android:id="@+id/btnEditProfileIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_button_blue"
        android:padding="10dp"
        android:src="@drawable/ic_edit"
        app:tint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Content Scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav_bar"
        app:layout_constraintTop_toBottomOf="@id/tv_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- Profile Overview Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <!-- Profile Image -->
                    <ImageView
                        android:id="@+id/ivProfile"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_person"
                        app:tint="#2962FF" 
                        android:padding="16dp"
                        android:background="@drawable/bg_circle_outline_gradient" 
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="16dp"/>

                    <!-- Initials Overlay (Optional) -->
                    <TextView
                        android:text="JD"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#2962FF"
                        android:visibility="gone"
                        app:layout_constraintTop_toTopOf="@id/ivProfile"
                        app:layout_constraintBottom_toBottomOf="@id/ivProfile"
                        app:layout_constraintStart_toStartOf="@id/ivProfile"
                        app:layout_constraintEnd_toEndOf="@id/ivProfile"/>

                    <TextView
                        android:id="@+id/tvName"
                        android:text="John Doe"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@id/ivProfile"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/tvEmail"
                        android:text="john.doe@example.com"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="4dp"
                        app:layout_constraintTop_toBottomOf="@id/tvName"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:text="Premium Plan"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_badge_premium"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@id/tvEmail"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Stats Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:layout_marginBottom="24dp">

                <!-- Stats 1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card_surface"
                    android:gravity="center"
                    android:padding="20dp"
                    android:layout_marginEnd="8dp">
                    
                    <TextView
                        android:text="1,248"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                    <TextView
                        android:text="Scans Performed"
                        android:textSize="10sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- Stats 2 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card_surface"
                    android:gravity="center"
                    android:padding="20dp"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:text="14"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#00C853"/> 
                    <TextView
                        android:text="Threats Blocked"
                        android:textSize="10sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Menu Options -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp">

                <!-- Option: General -->
                <LinearLayout
                    android:id="@+id/menu_general"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_profile_option"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal">
                    
                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_settings" app:tint="#546E7A" android:layout_marginEnd="16dp"/>
                    <TextView android:text="General Settings" android:textSize="14sp" android:textColor="@color/text_primary" android:textStyle="bold" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content"/>
                    <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/ic_chevron_right" app:tint="#B0BEC5"/>
                </LinearLayout>

                <!-- Option: Language -->
                <LinearLayout
                    android:id="@+id/menu_language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_profile_option"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal">

                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_language" app:tint="#546E7A" android:layout_marginEnd="16dp"/>
                    <TextView android:text="Language Preferences" android:textSize="14sp" android:textColor="@color/text_primary" android:textStyle="bold" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content"/>
                    <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/ic_chevron_right" app:tint="#B0BEC5"/>
                </LinearLayout>

                <!-- Option: Sensitivity -->
                <LinearLayout
                    android:id="@+id/menu_sensitivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_profile_option"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal">

                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_shield" app:tint="#546E7A" android:layout_marginEnd="16dp"/>
                    <TextView android:text="Detection Sensitivity" android:textSize="14sp" android:textColor="@color/text_primary" android:textStyle="bold" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content"/>
                    <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/ic_chevron_right" app:tint="#B0BEC5"/>
                </LinearLayout>

                <!-- Option: Privacy -->
                <LinearLayout
                    android:id="@+id/menu_privacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_profile_option"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal">

                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_lock" app:tint="#546E7A" android:layout_marginEnd="16dp"/>
                    <TextView android:text="Privacy &amp; Data" android:textSize="14sp" android:textColor="@color/text_primary" android:textStyle="bold" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content"/>
                    <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/ic_chevron_right" app:tint="#B0BEC5"/>
                </LinearLayout>

                <!-- Option: About -->
                <LinearLayout
                    android:id="@+id/menu_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_profile_option"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp"
                    android:orientation="horizontal">

                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_info" app:tint="#546E7A" android:layout_marginEnd="16dp"/>
                    <TextView android:text="About TrustWatch" android:textSize="14sp" android:textColor="@color/text_primary" android:textStyle="bold" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content"/>
                    <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/ic_chevron_right" app:tint="#B0BEC5"/>
                </LinearLayout>
            
                <!-- Logout Button -->
                <LinearLayout
                    android:id="@+id/btnLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card_outline" 
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_marginBottom="32dp">
                    
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_logout"
                        app:tint="@color/text_secondary"
                        android:layout_marginEnd="8dp"/>
                    <TextView
                        android:text="Log Out"
                        android:textColor="@color/text_secondary"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottom_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="horizontal">
        
        <TextView
            android:id="@+id/nav_btn_home"
            android:text="@string/nav_home"
            android:textColor="@color/text_secondary"
            android:textSize="10sp"
            android:gravity="center"
            android:drawableTop="@drawable/ic_home"
            android:drawableTint="@color/text_secondary"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"/>
            
        <TextView
            android:id="@+id/nav_btn_scan"
            android:text="@string/nav_scan"
            android:textColor="@color/text_secondary"
            android:textSize="10sp"
            android:gravity="center"
            android:drawableTop="@drawable/ic_eye"
            android:drawableTint="@color/text_secondary"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/nav_btn_threats"
            android:text="@string/nav_threats"
            android:textColor="@color/text_secondary"
            android:textSize="10sp"
            android:gravity="center"
            android:drawableTop="@drawable/ic_shield"
            android:drawableTint="@color/text_secondary"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/nav_btn_insights"
            android:text="@string/nav_insights"
            android:textColor="@color/text_secondary"
            android:textSize="10sp"
            android:gravity="center"
            android:drawableTop="@drawable/ic_trend_up"
            android:drawableTint="@color/text_secondary"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/nav_btn_profile"
            android:text="@string/nav_profile"
            android:textColor="@color/primary"
            android:textSize="10sp"
            android:gravity="center"
            android:drawableTop="@drawable/ic_person"
            android:drawableTint="@color/primary"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"/>
            
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
