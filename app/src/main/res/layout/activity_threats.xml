<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav_bar">

        <!-- Header -->
        <TextView
            android:text="Threats"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:padding="24dp"/>

        <!-- Shield Section (Center) -->
         <androidx.constraintlayout.widget.ConstraintLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginBottom="24dp">

             <!-- Big Circle -->
             <View
                 android:id="@+id/bgShield"
                 android:layout_width="160dp"
                 android:layout_height="160dp"
                 android:background="@drawable/bg_circle_gradient"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintBottom_toBottomOf="parent"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintEnd_toEndOf="parent"/>

             <!-- Icon Inside -->
             <ImageView
                 android:layout_width="64dp"
                 android:layout_height="64dp"
                 android:src="@drawable/ic_shield"
                 app:tint="@color/white"
                 app:layout_constraintTop_toTopOf="@id/bgShield"
                 app:layout_constraintBottom_toBottomOf="@id/bgShield"
                 app:layout_constraintStart_toStartOf="@id/bgShield"
                 app:layout_constraintEnd_toEndOf="@id/bgShield"/>
                 
             <!-- Status Badge -->
             <TextView
                 android:text="Safe"
                 android:textColor="@color/white"
                 android:background="@drawable/bg_button_blue"
                 android:backgroundTint="#00C853"
                 android:paddingHorizontal="16dp"
                 android:paddingVertical="6dp"
                 android:textSize="14sp"
                 android:textStyle="bold"
                 app:layout_constraintTop_toBottomOf="@id/bgShield"
                 app:layout_constraintStart_toStartOf="@id/bgShield"
                 app:layout_constraintEnd_toEndOf="@id/bgShield"
                 android:layout_marginTop="-16dp"/>

         </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Stats Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="24dp"
            android:layout_marginBottom="24dp">

            <!-- Card 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_card_outline"
                android:padding="16dp"
                android:layout_marginEnd="8dp">
                 <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_check_circle" app:tint="#00C853"/>
                 <TextView android:text="98%" android:textSize="20sp" android:textStyle="bold" android:textColor="@color/black" android:layout_marginTop="8dp"/>
                 <TextView android:text="Protected" android:textSize="12sp" android:textColor="@color/text_secondary"/>
            </LinearLayout>

            <!-- Card 2 -->
             <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_card_outline"
                android:padding="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">
                 <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_eye" app:tint="#2962FF"/> <!-- Using scan/eye icon -->
                 <TextView android:text="124" android:textSize="20sp" android:textStyle="bold" android:textColor="@color/black" android:layout_marginTop="8dp"/>
                 <TextView android:text="Scanned" android:textSize="12sp" android:textColor="@color/text_secondary"/>
            </LinearLayout>

            <!-- Card 3 -->
             <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_card_outline"
                android:padding="16dp"
                android:layout_marginStart="8dp">
                 <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_warning" app:tint="#FFAB00"/>
                 <TextView android:text="4" android:textSize="20sp" android:textStyle="bold" android:textColor="@color/black" android:layout_marginTop="8dp"/>
                 <TextView android:text="Threats" android:textSize="12sp" android:textColor="@color/text_secondary"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Search & Filter -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="24dp"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:background="@drawable/bg_search_bar"
                android:hint="Search threats..."
                android:paddingStart="16dp"
                android:textSize="14sp"
                android:layout_marginEnd="12dp"/>
                
            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_search" 
                android:background="@drawable/bg_search_bar"
                app:tint="@color/text_secondary"/> 
        </LinearLayout>

        <!-- Filter Chips (Horizontal Scroll) -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="16dp">
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
                <androidx.appcompat.widget.AppCompatButton
                    android:text="All"
                    android:background="@drawable/bg_chip_selected"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:minHeight="32dp"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"/>
                    
                <androidx.appcompat.widget.AppCompatButton
                    android:text="Phishing"
                    android:background="@drawable/bg_chip_unselected"
                    android:textColor="@color/text_secondary"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"/>
                    
                <androidx.appcompat.widget.AppCompatButton
                    android:text="Suspicious"
                    android:background="@drawable/bg_chip_unselected"
                    android:textColor="@color/text_secondary"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:text="Safe"
                    android:background="@drawable/bg_chip_unselected"
                    android:textColor="@color/text_secondary"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"/>
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Threats List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvThreats"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="24dp"/>

    </LinearLayout>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottom_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="horizontal">
        
        <TextView
            android:id="@+id/nav_btn_home"
            android:text="@string/nav_home"
            android:textColor="@color/text_secondary"
            android:textSize="10sp"
            android:gravity="center"
            android:drawableTop="@drawable/ic_home"
            android:drawableTint="@color/text_secondary"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"/>
            
        <TextView
            android:id="@+id/nav_btn_scan"
            android:text="@string/nav_scan"
            android:textColor="@color/text_secondary"
            android:textSize="10sp"
            android:gravity="center"
            android:drawableTop="@drawable/ic_eye"
            android:drawableTint="@color/text_secondary"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/nav_btn_threats"
            android:text="@string/nav_threats"
            android:textColor="@color/primary"
            android:textSize="10sp"
            android:gravity="center"
            android:drawableTop="@drawable/ic_shield"
            android:drawableTint="@color/primary"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/nav_btn_insights"
            android:text="@string/nav_insights"
            android:textColor="@color/text_secondary"
            android:textSize="10sp"
            android:gravity="center"
            android:drawableTop="@drawable/ic_trend_up"
            android:drawableTint="@color/text_secondary"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/nav_btn_profile"
            android:text="@string/nav_profile"
            android:textColor="@color/text_secondary"
            android:textSize="10sp"
            android:gravity="center"
            android:drawableTop="@drawable/ic_person"
            android:drawableTint="@color/text_secondary"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"/>
            
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
