<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FE">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chevron_right"
            android:rotation="180"
            app:tint="#1A1C1E" />
            
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Threat Distribution"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1A1C1E"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Donut Chart Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="32dp"
                    android:gravity="center">

                    <!-- Mock Donut Chart using FrameLayout and shapes -->
                    <FrameLayout
                        android:layout_width="200dp"
                        android:layout_height="200dp">
                        
                         <!-- Outer Circle (Purple) -->
                         <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_circle_outline_gradient" 
                            android:backgroundTint="#d2a6ff"/> 
                            <!-- Ideally a custom drawable for thick stroke ring -->
                            
                         <!-- Inner White Circle to make it donut -->
                         <View
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_circle_light"
                            android:backgroundTint="#FFFFFF"/>
                            
                         <!-- Center Text -->
                         <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center">
                            <TextView
                                android:text="100%"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:textColor="#1A1C1E"/>
                             <TextView
                                android:text="Total"
                                android:textSize="12sp"
                                android:textColor="#8F92A1"/>
                         </LinearLayout>
                    </FrameLayout>

                    <!-- Legend -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="32dp">

                        <!-- Item 1 -->
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="16dp" android:gravity="center_vertical">
                            <View android:layout_width="10dp" android:layout_height="10dp" android:background="@drawable/bg_circle_blue_solid" android:backgroundTint="#2979FF"/>
                            <TextView android:text="Email Phishing" android:layout_marginStart="12dp" android:textSize="14sp" android:textColor="#546E7A" android:layout_weight="1"/>
                            <TextView android:text="55%" android:textStyle="bold" android:textSize="14sp" android:textColor="#1A1C1E"/>
                        </LinearLayout>
                        
                        <!-- Item 2 -->
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="16dp" android:gravity="center_vertical">
                             <View android:layout_width="10dp" android:layout_height="10dp" android:background="@drawable/bg_circle_blue_solid" android:backgroundTint="#00C853"/>
                            <TextView android:text="SMS Smishing" android:layout_marginStart="12dp" android:textSize="14sp" android:textColor="#546E7A" android:layout_weight="1"/>
                            <TextView android:text="25%" android:textStyle="bold" android:textSize="14sp" android:textColor="#1A1C1E"/>
                        </LinearLayout>
                        
                        <!-- Item 3 -->
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="16dp" android:gravity="center_vertical">
                             <View android:layout_width="10dp" android:layout_height="10dp" android:background="@drawable/bg_circle_blue_solid" android:backgroundTint="#FFAB00"/>
                            <TextView android:text="Malicious URLs" android:layout_marginStart="12dp" android:textSize="14sp" android:textColor="#546E7A" android:layout_weight="1"/>
                            <TextView android:text="15%" android:textStyle="bold" android:textSize="14sp" android:textColor="#1A1C1E"/>
                        </LinearLayout>
                        
                         <!-- Item 4 -->
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical">
                             <View android:layout_width="10dp" android:layout_height="10dp" android:background="@drawable/bg_circle_blue_solid" android:backgroundTint="#AA00FF"/>
                            <TextView android:text="In-App Scams" android:layout_marginStart="12dp" android:textSize="14sp" android:textColor="#546E7A" android:layout_weight="1"/>
                            <TextView android:text="5%" android:textStyle="bold" android:textSize="14sp" android:textColor="#1A1C1E"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Key Insight -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginTop="24dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">
                    
                    <TextView
                        android:text="Key Insight"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#1A1C1E"/>
                    
                    <TextView
                        android:text="Email remains the primary vector for attacks, accounting for over half of all detected threats. SMS attacks are rising rapidly, up 15% from last month."
                        android:textSize="12sp"
                        android:textColor="#546E7A"
                        android:layout_marginTop="8dp"
                        android:lineSpacingExtra="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
