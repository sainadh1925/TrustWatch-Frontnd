<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FE">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chevron_right"
            android:rotation="180"
            app:tint="#1A1C1E" />
            
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI Accuracy"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1A1C1E"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Stats Header -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:text="99.8%"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="#00C853"/>
                         <TextView
                            android:text="True Positive Rate"
                            android:textSize="10sp"
                            android:textColor="#8F92A1"/>
                    </LinearLayout>
                    
                    <View android:layout_width="1dp" android:layout_height="match_parent" android:background="#F0F0F0" android:layout_marginHorizontal="16dp"/>

                     <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:text="0.02%"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="#2962FF"/>
                         <TextView
                            android:text="False Positive Rate"
                            android:textSize="10sp"
                            android:textColor="#8F92A1"/>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Model Performance List -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">
                    
                    <TextView
                        android:text="Model Performance"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#1A1C1E"
                        android:layout_marginBottom="20dp"/>

                    <!-- Correctly Blocked -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="#F8F9FE"
                        android:padding="16dp"
                        android:layout_marginBottom="12dp">
                        
                         <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_check_circle"
                            app:tint="#00C853"/>
                        
                        <TextView
                            android:text="Correctly Blocked"
                            android:layout_marginStart="16dp"
                            android:textColor="#1A1C1E"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:layout_weight="1"/>
                            
                        <TextView
                            android:text="1,248"
                            android:textStyle="bold"
                            android:textColor="#1A1C1E"/>
                    </LinearLayout>

                    <!-- Missed Threats -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="#FFEBEE"
                        android:padding="16dp"
                        android:layout_marginBottom="12dp">
                        
                         <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_clear_circle" 
                            android:tint="#D32F2F"/>
                            <!-- Need separate icon or just use warning/close -->
                        
                        <TextView
                            android:text="Missed Threats"
                            android:layout_marginStart="16dp"
                            android:textColor="#1A1C1E"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:layout_weight="1"/>
                            
                        <TextView
                            android:text="0"
                            android:textStyle="bold"
                            android:textColor="#1A1C1E"/>
                    </LinearLayout>
                    
                    <!-- False Alarms -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="#FFF8E1"
                        android:padding="16dp"
                        android:layout_marginBottom="12dp">
                        
                         <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_warning" 
                            android:tint="#FFA000"/>
                        
                        <TextView
                            android:text="False Alarms"
                            android:layout_marginStart="16dp"
                            android:textColor="#1A1C1E"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:layout_weight="1"/>
                            
                        <TextView
                            android:text="2"
                            android:textStyle="bold"
                            android:textColor="#1A1C1E"/>
                    </LinearLayout>

                    <TextView
                        android:text="Last model update: 2 hours ago"
                        android:textSize="10sp"
                        android:textColor="#8F92A1"
                        android:gravity="center"
                        android:layout_marginTop="16dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
