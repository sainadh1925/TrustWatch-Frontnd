<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".ScanActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan Center"
            android:textColor="@color/text_primary"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav_bar"
        app:layout_constraintTop_toBottomOf="@id/header_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Hero Graphic (Simplified for XML) -->
            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_logo_container"
                android:backgroundTint="#E0F7FA">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_shield"
                    app:tint="#00BCD4" />
                
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_eye"
                    app:tint="#0097A7"/>

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Choose Scan Type"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="32dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Select what you want to scan for threats"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            <!-- Scan Option: SMS -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card_scan_sms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_card_surface"
                android:padding="16dp">

                <FrameLayout
                    android:id="@+id/icon_sms"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_card_surface"
                    android:backgroundTint="#E8F5E9"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_sms"
                        app:tint="#2E7D32" />
                </FrameLayout>

                <TextView
                    android:id="@+id/title_sms"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="SMS Messages"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/icon_sms" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:text="View and scan your text messages for threats"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@id/arrow_sms"
                    app:layout_constraintStart_toEndOf="@id/icon_sms"
                    app:layout_constraintTop_toBottomOf="@id/title_sms" />

                <ImageView
                    android:id="@+id/arrow_sms"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="#BDBDBD"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Scan Option: Email -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card_scan_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_card_surface"
                android:padding="16dp">

                <FrameLayout
                    android:id="@+id/icon_email"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_card_surface"
                    android:backgroundTint="#E3F2FD"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_email"
                        app:tint="#1565C0" />
                </FrameLayout>

                <TextView
                    android:id="@+id/title_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Email Messages"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/icon_email" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:text="Check your emails for phishing attempts"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@id/arrow_email"
                    app:layout_constraintStart_toEndOf="@id/icon_email"
                    app:layout_constraintTop_toBottomOf="@id/title_email" />

                <ImageView
                    android:id="@+id/arrow_email"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="#BDBDBD"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Scan Option: URL -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card_scan_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_card_surface"
                android:padding="16dp">

                <FrameLayout
                    android:id="@+id/icon_url"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_card_surface"
                    android:backgroundTint="#FFF3E0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_globe"
                        app:tint="#FF6F00" />
                </FrameLayout>

                <TextView
                    android:id="@+id/title_url"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Website URL"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/icon_url" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:text="Verify if a website link is safe to visit"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@id/arrow_url"
                    app:layout_constraintStart_toEndOf="@id/icon_url"
                    app:layout_constraintTop_toBottomOf="@id/title_url" />

                <ImageView
                    android:id="@+id/arrow_url"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="#BDBDBD"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Real-Time Protection Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_surface"
                android:backgroundTint="#00897B"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="! Real-Time Protection"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TrustWatch automatically scans incoming messages in the background to keep you safe."
                    android:textColor="#E0F2F1"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:id="@+id/btn_scan_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Settings"
                    android:textColor="#00695C"
                    android:backgroundTint="#FFFFFF"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:minHeight="40dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar (Copied from Dashboard for visual consistency) -->
    <LinearLayout
        android:id="@+id/bottom_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="horizontal">
        
        <TextView
            android:id="@+id/nav_btn_home"
            android:text="@string/nav_home"
            android:textColor="@color/text_secondary"
            android:textSize="10sp"
            android:gravity="center"
            android:drawableTop="@drawable/ic_home"
            android:drawableTint="@color/text_secondary"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"/>
            
        <TextView
            android:id="@+id/nav_btn_scan"
            android:text="@string/nav_scan"
            android:textColor="@color/primary"
            android:textSize="10sp"
            android:gravity="center"
            android:drawableTop="@drawable/ic_eye"
            android:drawableTint="@color/primary"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"/>

        <!-- Other nav items omitted/simplified as placeholders for now -->
        <TextView
            android:id="@+id/nav_btn_threats"
            android:text="@string/nav_threats"
            android:textColor="@color/text_secondary"
            android:textSize="10sp"
            android:gravity="center"
            android:drawableTop="@drawable/ic_shield"
            android:drawableTint="@color/text_secondary"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/nav_btn_insights"
            android:text="@string/nav_insights"
            android:textColor="@color/text_secondary"
            android:textSize="10sp"
            android:gravity="center"
            android:drawableTop="@drawable/ic_trend_up"
            android:drawableTint="@color/text_secondary"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/nav_btn_profile"
            android:text="@string/nav_profile"
            android:textColor="@color/text_secondary"
            android:textSize="10sp"
            android:gravity="center"
            android:drawableTop="@drawable/ic_person"
            android:drawableTint="@color/text_secondary"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"/>
            
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
