<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FE">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chevron_right"
            android:rotation="180"
            app:tint="#1A1C1E" />
            
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Language Analysis"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1A1C1E"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Hero Image Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingTop="32dp"
                    android:paddingBottom="24dp"
                    android:paddingHorizontal="20dp">
                    
                    <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp">
                         <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_circle_blue_light"
                            android:backgroundTint="#e3f2fd"/>
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_globe"
                            app:tint="#2979FF"
                            android:layout_gravity="center"/>
                         <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_search" 
                            android:layout_gravity="top|end"
                            android:background="@drawable/bg_circle_blue_solid"
                            android:padding="4dp"
                            app:tint="@color/white"/>
                            <!-- Mocking flag overlay with search icon for now as placeholder for flag -->
                    </FrameLayout>

                    <TextView
                        android:text="TrustWatch has analyzed content in 6 major Indian languages this month, detecting threats in regional scripts and protecting users across India."
                        android:textSize="12sp"
                        android:textColor="#546E7A"
                        android:gravity="center"
                        android:layout_marginTop="24dp"
                        android:lineSpacingExtra="4dp"/>
                    
                    <TextView
                        android:text="+24% detection in regional languages"
                        android:textSize="12sp"
                        android:textColor="#2979FF"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Language List -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginTop="24dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">
                    
                    <TextView
                        android:text="Threats by Language"
                        android:textStyle="bold"
                        android:textColor="#1A1C1E"
                        android:textSize="14sp"
                        android:layout_marginBottom="16dp"/>

                    <!-- English -->
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginBottom="16dp">
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                             <TextView android:text="English" android:textStyle="bold" android:textSize="12sp" android:textColor="#1A1C1E" android:layout_weight="1"/>
                             <TextView android:text="145 detected" android:textSize="10sp" android:textColor="#8F92A1"/>
                        </LinearLayout>
                        <ProgressBar
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:progress="80"
                            android:progressTint="#5669FF"
                            android:layout_marginTop="6dp"/>
                    </LinearLayout>

                    <!-- Hindi -->
                     <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginBottom="16dp">
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                             <TextView android:text="Hindi" android:textStyle="bold" android:textSize="12sp" android:textColor="#1A1C1E" android:layout_weight="1"/>
                             <TextView android:text="98 detected" android:textSize="10sp" android:textColor="#8F92A1"/>
                        </LinearLayout>
                        <ProgressBar
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:progress="60"
                            android:progressTint="#AB47BC"
                            android:layout_marginTop="6dp"/>
                    </LinearLayout>

                    <!-- Telugu -->
                     <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginBottom="16dp">
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                             <TextView android:text="Telugu" android:textStyle="bold" android:textSize="12sp" android:textColor="#1A1C1E" android:layout_weight="1"/>
                             <TextView android:text="67 detected" android:textSize="10sp" android:textColor="#8F92A1"/>
                        </LinearLayout>
                        <ProgressBar
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:progress="40"
                            android:progressTint="#FF7043"
                            android:layout_marginTop="6dp"/>
                    </LinearLayout>
                    
                    <!-- Tamil -->
                     <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginBottom="16dp">
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                             <TextView android:text="Tamil" android:textStyle="bold" android:textSize="12sp" android:textColor="#1A1C1E" android:layout_weight="1"/>
                             <TextView android:text="52 detected" android:textSize="10sp" android:textColor="#8F92A1"/>
                        </LinearLayout>
                        <ProgressBar
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:progress="30"
                            android:progressTint="#FFA726"
                            android:layout_marginTop="6dp"/>
                    </LinearLayout>
                    
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
