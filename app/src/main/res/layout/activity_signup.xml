<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="@drawable/login_background_security">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_back_arrow"
        app:tint="@color/white"
        android:layout_gravity="start"
        android:layout_marginBottom="16dp"/>

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_shield"
        app:tint="@color/white"
        android:padding="12dp"
        android:background="@drawable/bg_logo_container"
        android:backgroundTint="#20FFFFFF"
        android:elevation="4dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:text="Create Account"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Start your comprehensive protection today"
        android:textSize="12sp"
        android:textColor="#E0E0E0"
        android:layout_marginBottom="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Full Name"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_gravity="start"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etFullName"
        android:hint="John Doe"
        android:background="@drawable/bg_input_field"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textSize="14sp"
        android:backgroundTint="#F0F4F8"
        android:textColor="@color/text_primary"
        android:textColorHint="@color/text_hint"
        android:inputType="textPersonName"/>

    <TextView
        android:text="Email Address"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_gravity="start"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etEmail"
        android:hint="name@company.com"
        android:background="@drawable/bg_input_field"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textSize="14sp"
        android:backgroundTint="#F0F4F8"
        android:textColor="@color/text_primary"
        android:textColorHint="@color/text_hint"
        android:inputType="textEmailAddress"/>

    <TextView
        android:text="Password"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_gravity="start"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etPassword"
        android:hint="Create a strong password"
        android:background="@drawable/bg_input_field"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textSize="14sp"
        android:backgroundTint="#F0F4F8"
        android:textColor="@color/text_primary"
        android:textColorHint="@color/text_hint"
        android:inputType="textPassword"/>

    <TextView
        android:text="Confirm Password"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_gravity="start"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etConfirmPassword"
        android:hint="Confirm your password"
        android:background="@drawable/bg_input_field"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:textSize="14sp"
        android:backgroundTint="#F0F4F8"
        android:textColor="@color/text_primary"
        android:textColorHint="@color/text_hint"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/btnCreateAccount"
        android:text="Create Account"
        android:textAllCaps="false"
        android:background="@drawable/bg_button_blue"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="Already have an account? "
            android:textSize="12sp"
            android:textColor="#E0E0E0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvSignIn"
            android:text="Sign In"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
